<h1>Students List<span style="float:right"><% if admin_signed_in? %> <%= link_to "+ Add Student", new_student_registration_path,class:"btn btn-primary" %><% end %></span></h1>

<div class="container">
<table class="table table-striped table-hover">
<thead class="thead-dark">
<tr>
<th>Id</th>
<th>Name</th>
<th>Phone</th>
<th>Email</th>

<% if admin_signed_in? %><th colspan="2"></th><% end %>
    </tr>
    </thead>
    <tbody>
    <% @stu.each do |student| %>
    <tr>
    <td> <%= student.id %></td>
       <td> <%= student.name %></td>
       <td> <%= student.phone %></td>
       <td> <%= student.email %></td>
       <% if admin_signed_in? %> <td><%= link_to "edit student", edit_student_path(student),class:"btn btn-warning",style:"color:white;" %></td>
       <td>
       <%=
       link_to "Delete", 
       students_id_path(:id=>student.id),class:"btn btn-danger",style:"color:white;"
     %>
       </td><% end %>
       </tr>
        <% end %>
        </tbody>
        </table>
</div>
